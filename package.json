{
  "name": "gue",
  "version": "0.0.3",
  "description": "A lightweight task runner",
  "main": "index.js",
  "scripts": {
    "test": "rm -rf coverage && nyc --reporter=lcov --reporter=text mocha test/**/*.js",
    "clean": "rm -rf node_modules coverage",
    "docs": "rm -f README.md && jsdoc2md --example-lang js --template docs/readme.hbs --separators --partial docs/scope.hbs --files index.js > README.md"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/skarfacegc/Gue.git"
  },
  "keywords": [
    "node",
    "task-runner",
    "task"
  ],
  "bin": {
    "gue": "./bin/gue.js"
  },
  "author": "Andrew Williams",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/skarfacegc/Gue/issues"
  },
  "homepage": "https://github.com/skarfacegc/Gue#readme",
  "dependencies": {
    "chalk": "^1.1.3",
    "execa": "^0.6.1",
    "liftoff": "^2.3.0",
    "lodash.template": "^4.4.0",
    "minimist": "^1.2.0",
    "orchestrator": "^0.3.8",
    "pretty-ms": "^2.1.0",
    "trim-newlines": "^1.0.0"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "jsdoc-to-markdown": "^3.0.0",
    "markdox": "^0.1.10",
    "mocha": "^3.2.0",
    "nyc": "^10.1.2",
    "sinon": "^2.1.0",
    "sinon-chai": "^2.8.0"
  }
}
